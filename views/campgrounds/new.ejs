<% layout("layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-md-6 mx-auto">
        <h1>Add a new Campground</h1>
        <form action="/campground" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="title">Title </label>
                <input type="text" class="form-control" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="description" name="campground[description]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="input-group mb-3">
                <input type="file" class="form-control" id="image" name="image" multiple>
                <label class="input-group-text" for="image">Add more image(s)..</label>
            </div>


            <div class="form-group mb-3">
                <label for="price">Price</label>
                <input type="text" class="form-control" id="price" name="campground[price]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Add Campground</button>
        </form>
    </div>
</div>

    
