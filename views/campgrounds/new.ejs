<% layout("layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-md-6 mx-auto">
        <h1>Add a new Campground</h1>
        <form action="/campground" method="POST">
            <div class="form-group mb-3">
                <label for="title">Title </label>
                <input type="text" class="form-control" id="title" name="campground[title]">
            </div>
            <div class="form-group mb-3">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="description" name="campground[description]">
            </div>
            <div class="form-group mb-3">
                <label for="price">Price</label>
                <input type="number" class="form-control" id="price" name="campground[price]">
            </div>
            <div class="form-group mb-3">
                <label for="img">Image Url</label>
                <input type="text" class="form-control" id="img" name="campground[img]">
            </div>
            <button type="submit" class="btn btn-primary">Add Campground</button>
        </form>
    </div>
</div>

    
