<% layout("layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-md-6 mx-auto">
        <h1>Add a new Campground</h1>
        <form action="/campground" method="POST" class="validated-form" novalidate>
            <div class="form-group mb-3">
                <label for="title">Title </label>
                <input type="text" class="form-control" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="description" name="campground[description]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="price">Price</label>
                <input type="text" class="form-control" id="price" name="campground[price]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="img">Image Url</label>
                <input type="text" class="form-control" id="img" name="campground[img]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add Campground</button>
        </form>
    </div>
</div>

    
